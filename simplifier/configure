#!/usr/bin/env python

import sys

if __name__ == "__main__":
    verbose = False
    for arg in sys.argv[1:]:
        if arg == "-v" or arg == "--verbose":
            verbose = True
    fout = open("config.h", "w")
    fout.write("#ifndef __SLICER_SIMPLIFIER_CONFIG_H\n")
    fout.write("#define __SLICER_SIMPLIFIER_CONFIG_H\n")
    fout.write("\n")

    if verbose:
        fout.write("#define VERBOSE\n")
    else:
        fout.write("#undef VERBOSE\n")

    fout.write("\n")
    fout.write("#endif\n")
    fout.close()
