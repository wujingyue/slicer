#!/usr/bin/env python

import sys

if __name__ == "__main__":
    verbose = False
    check = False
    for arg in sys.argv[1:]:
        if arg == "-v" or arg == "--verbose":
            verbose = True
        if arg == "-c" or arg == "--check":
            check = True
    fout = open("config.h", "w")
    fout.write("#ifndef __MAX_SLICING_CONFIG_H\n")
    fout.write("#define __MAX_SLICING_CONFIG_H\n")
    fout.write("\n")

    if verbose:
        fout.write("#define VERBOSE\n")
    else:
        fout.write("#undef VERBOSE\n")

    if check:
        fout.write("#define CHECK\n")
    else:
        fout.write("#undef CHECK\n")

    fout.write("\n")
    fout.write("#endif\n")
    fout.close()

